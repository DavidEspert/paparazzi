<airframe name="Quadricopter Apogee Skiron">

<!-- this is a quadrotor frame equiped with
     * Autopilot:   APOGEE V1.0
     * Imu:         APOGEE Board = MPU9150 (acc & gyro & mag) + baro MPL3115
                                 + MAG HMC58 on GPS board (no used)
     * Actuators:   I2C motor controllers  (skiron)
     * GPS:         Ublox M8
     * RC:          FrSky Taranis plus X9D + X8R Sbus
-->

  <modules main_freq="512">
  </modules>

  <firmware name="rotorcraft">

    <target name="ap" board="apogee_1.0"/>

    <!-- MPU9150 Master request slaves MAG and BARO -->
    <define name="MPU9150_SLV_MAG"/>
    <define name="MPU9150_SLV_BARO"/>
    <!-- USE_BARO_BOARD Should be FALSE to request data as a mpu9150 slave -->
    <configure name="USE_BARO_BOARD" value="FALSE"/>

    <subsystem name="radio_control" type="sbus"/>
    <define name="RADIO_KILL_SWITCH" value="RADIO_KILL"/>

    <subsystem name="telemetry" type="xbee_api"/>

    <subsystem name="actuators" type="skiron">
      <configure name="ACTUATORS_SKIRON_I2C_DEV" value="i2c2"/>
      <define name="SKIRON_I2C_SCL_TIME" value="25"/>
    </subsystem>

    <subsystem name="motor_mixing"/>

    <subsystem name="actuators" type="pwm"/>

    <subsystem name="imu" type="apogee"/>

    <subsystem name="gps" type="ublox">
      <configure name="GPS_BAUD" value="B57600"/>
    </subsystem>

    <subsystem name="stabilization" type="int_quat"/>

    <!-- Option 1) Ins(Accel + Gyro + Mag + Baro) + no GPS -->
    <subsystem name="ins"  type="extended"/>
    <subsystem name="ahrs" type="int_cmpl_quat"/>

    <!-- Option 2) Ins(Accel + Gyro + Mag + Baro) + GPS >
    <subsystem name="ins" type="float_invariant">
      <define name="SEND_INVARIANT_FILTER"/>
    </subsystem-->


  </firmware>

  <commands>
    <axis name="PITCH" failsafe_value="0"/>
    <axis name="ROLL" failsafe_value="0"/>
    <axis name="YAW" failsafe_value="0"/>
    <axis name="THRUST" failsafe_value="0"/>
  </commands>

  <servos driver="Skiron">
    <servo name="FRONT_LEFT" no="0" min="0" neutral="20" max="255"/>
    <servo name="BACK_LEFT" no="1" min="0" neutral="20" max="255"/>
    <servo name="BACK_RIGHT" no="2" min="0" neutral="20" max="255"/>
    <servo name="FRONT_RIGHT" no="3" min="0" neutral="20" max="255"/>
  </servos>


  <section name="MIXING" prefix="MOTOR_MIXING_">
    <define name="TRIM_ROLL" value="0"/>
    <define name="TRIM_PITCH" value="0"/>
    <define name="TRIM_YAW" value="0"/>
    <define name="NB_MOTOR" value="4"/>
    <define name="SCALE" value="256"/>
    <!-- Cross layout (X)                  -->
    <!--   CW = FRONT_LEFT & BACK_RIGHT   -->
    <!--   CCW  = FRONT_RITGHT & BACK_LEFT  -->
    <define name="ROLL_COEF" value="{   256,  256, -256, -256 }"/>
    <define name="PITCH_COEF" value="{   256, -256, -256,  256 }"/>
    <define name="YAW_COEF" value="{  -256,  256, -256,  256 }"/>
    <define name="THRUST_COEF" value="{   256,  256,  256,  256 }"/>
  </section>


  <command_laws>
    <call fun="motor_mixing_run(autopilot_motors_on,FALSE,values)"/>
    <set servo="FRONT_LEFT" value="motor_mixing.commands[0]"/>
    <set servo="BACK_LEFT" value="motor_mixing.commands[1]"/>
    <set servo="BACK_RIGHT" value="motor_mixing.commands[2]"/>
    <set servo="FRONT_RIGHT" value="motor_mixing.commands[3]"/>
  </command_laws>


  <section name="IMU" prefix="IMU_">

    <!-- APOGEE IMU ORIENTATION: SD card UP, +/- on front -->

    <define name="GYRO_P_SIGN" value="1"/>
    <define name="GYRO_Q_SIGN" value="1"/>
    <define name="GYRO_R_SIGN" value="1"/>

    <define name="ACCEL_X_SIGN" value="1"/>
    <define name="ACCEL_Y_SIGN" value="1"/>
    <define name="ACCEL_Z_SIGN" value="1"/>

    <define name="MAG_X_SIGN" value="1"/>
    <define name="MAG_Y_SIGN" value="1"/>
    <define name="MAG_Z_SIGN" value="-1"/>

    <!-- From calibration tool -->
    <define name="ACCEL_X_NEUTRAL" value="95"/>
    <define name="ACCEL_Y_NEUTRAL" value="-35"/>
    <define name="ACCEL_Z_NEUTRAL" value="-278"/>
    <define name="ACCEL_X_SENS" value="2.44363433511" integer="16"/>
    <define name="ACCEL_Y_SENS" value="2.44506655115" integer="16"/>
    <define name="ACCEL_Z_SENS" value="2.44542215596" integer="16"/>

    <!-- From calibration tool -->
    <define name="MAG_X_NEUTRAL" value="45"/>
    <define name="MAG_Y_NEUTRAL" value="51"/>
    <define name="MAG_Z_NEUTRAL" value="-5"/>
    <define name="MAG_X_SENS" value="10.7875790958" integer="16"/>
    <define name="MAG_Y_SENS" value="17.0143266799" integer="16"/>
    <define name="MAG_Z_SENS" value="18.5886466779" integer="16"/>

    <define name="BODY_TO_IMU_PHI" value="0." unit="deg"/>
    <define name="BODY_TO_IMU_THETA" value="0." unit="deg"/>
    <define name="BODY_TO_IMU_PSI" value="0." unit="deg"/>

  </section>

