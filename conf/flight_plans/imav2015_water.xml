<!DOCTYPE flight_plan SYSTEM "flight_plan.dtd">

<flight_plan alt="227" ground_alt="207" lat0="50.788812" lon0="6.046862" max_dist_from_home="170" name="Imav2015 Water" security_height="2">
  <header>
#include "autopilot.h"
#include "navigation.h"
#include "guidance/guidance_v.h"
#define DeltaX(_wp) (GetPosX() - WaypointX(_wp))
#define DeltaY(_wp) (GetPosY() - WaypointY(_wp))
static inline bool_t CloseFrom(uint8_t _wp) { if (LessThan(sqrtf(DeltaX(_wp)*DeltaX(_wp) + DeltaY(_wp)*DeltaY(_wp)),1.)) return TRUE; else return FALSE; }
</header>
  <waypoints>
    <waypoint name="HOME" x="0.0" y="0.0"/>
    <waypoint name="CLIMB" x="43.6" y="104.8"/>
    <waypoint name="STDBY" x="40.4" y="107.6"/>
    <waypoint name="TD" x="11.0" y="-15.0"/>
    <waypoint name="_FLY1" x="1.6" y="-37.0"/>
    <waypoint name="_FLY2" x="32.6" y="0.6"/>
    <waypoint name="_FLY3" x="14.2" y="16.9"/>
    <waypoint name="_FLY4" x="77.2" y="95.4"/>
    <waypoint name="_FLY5" x="13.3" y="147.6"/>
    <waypoint name="_FLY6" x="-100.5" y="30.1"/>
    <waypoint name="_KILL1" x="1.8" y="-42.1"/>
    <waypoint name="_KILL2" x="36.4" y="2.9"/>
    <waypoint name="_KILL3" x="90.0" y="100.0"/>
    <waypoint name="_KILL4" x="12.6" y="159.9"/>
    <waypoint name="_KILL5" x="-109.7" y="29.8"/>
    <waypoint name="WATER" x="1.4" y="8.5"/>
    <waypoint name="p1" x="1.5" y="35.2"/>
  </waypoints>
  <sectors>
    <sector color="lime" name="Flight_Area">
      <corner name="_FLY1"/>
      <corner name="_FLY2"/>
      <corner name="_FLY3"/>
      <corner name="_FLY4"/>
      <corner name="_FLY5"/>
      <corner name="_FLY6"/>
    </sector>
    <sector color="red" name="Kill">
      <corner name="_KILL1"/>
      <corner name="_KILL2"/>
      <corner name="_KILL3"/>
      <corner name="_KILL4"/>
      <corner name="_KILL5"/>
    </sector>
  </sectors>
  <exceptions>
    <exception cond="Or(!InsideFlight_Area(GetPosX(), GetPosY()), GetPosAlt() > GetAltRef() + 38) && !(nav_block == IndexOfBlock('Wait GPS')) && !(nav_block == IndexOfBlock('Geo init')) && !(nav_block == IndexOfBlock('Holding point')) && !(nav_block == IndexOfBlock('Motor Idle')) && !(nav_block == IndexOfBlock('Home Safety')) && !(nav_block == IndexOfBlock('Land Safety'))" deroute="Home Safety"/>
  </exceptions>
  <blocks>
    <block name="Wait GPS">
      <call fun="NavKillThrottle()"/>
      <while cond="!GpsFixValid() && gps.pacc > 1500"/>
    </block>
    <block name="Geo init">
      <while cond="LessThan(NavBlockTime(), 10)"/>
      <call fun="NavSetAltitudeReferenceHere()"/>
    </block>
    <block name="Holding point">
      <call fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block group="home" name="Start Engine" strip_button="Start Engine" strip_icon="on.png">
      <set value="0.7" var="guidance_v_nominal_throttle"/>
      <call fun="NavResurrect()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block group="home" name="Takeoff" strip_button="Takeoff" strip_icon="takeoff.png">
      <exception cond="stateGetPositionEnu_f()->z > 10.0" deroute="Start Mission"/>
      <call fun="NavSetWaypointHere(WP_CLIMB)"/>
      <stay climb="0.5" vmode="climb" wp="CLIMB"/>
    </block>
    <block group="home" name="Standby" strip_button="Standby" strip_icon="home.png">
      <stay wp="STDBY"/>
    </block>
    <block name="Start Mission" strip_button="Start Drop Water">
      <path wpts="CLIMB,STDBY,p1,WATER"/>
    </block>
    <block name="Drop Water">
      <stay climb="-1.0" until="5.0 > stateGetPositionEnu_f()->z" vmode="climb" wp="WATER"/>
      <stay until="CloseFrom(WP_WATER)" wp="WATER" alt="222."/>
      <call fun="DropOpen()"/>
      <set value="0.46" var="guidance_v_nominal_throttle"/>
      <stay until="stage_time>1" wp="WATER" alt="217."/>
    </block>
    <block name="Land from WATER">
      <path wpts="WATER,TD" alt="217."/>
      <deroute block="land"/>
    </block>
    <block name="land here">
      <call fun="NavSetWaypointHere(WP_TD)"/>
    </block>
    <block name="land" strip_button="Land" strip_icon="land-right.png">
      <go wp="TD"/>
    </block>
    <block name="flare">
      <exception cond="NavDetectGround()" deroute="Holding point"/>
      <exception cond="!nav_is_in_flight()" deroute="Motor Idle"/>
      <call fun="NavStartDetectGround()"/>
      <stay climb="-0.8" vmode="climb" wp="TD"/>
    </block>
    <block name="Motor Idle">
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Home Safety">
      <exception cond="Or(!InsideKill(GetPosX(), GetPosY()), GetPosAlt() > GetAltRef() + 40)" deroute="Land Safety"/>
      <stay height="10" wp="HOME"/>
    </block>
    <block name="Land Safety">
      <attitude pitch="0" roll="0" throttle="0.1" until="FALSE" vmode="throttle"/>
    </block>
  </blocks>
</flight_plan>
