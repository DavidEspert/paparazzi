<!DOCTYPE module SYSTEM "module.dtd">

<module name="gpslogsd">
  <doc>
    <description>
      Log all from gps on sdcard
    </description>
    <configure name="GPSLOGSD_PORT" value="UARTX" description="UART use to get data to log"/>
    <configure name="GPSLOGSD_BAUD" value="B57600" description="UART baud rate"/>
  </doc>
  <header>
    <file name="gpslogsd.h"/>
  </header>
  <init fun="gpslogsd_init()"/>
  <periodic fun="gpslogsd_periodic()" freq="10" autorun="TRUE"/>
  <event fun="gpslogsd_event()"/>
  <makefile target="ap">
    <configure name="GPSLOGSD_PORT" case="upper|lower"/>
    <define name="USE_$(GPSLOGSD_PORT_UPPER)"/>
    <define name="GPSLOGSD_DEV" value="$(GPSLOGSD_PORT_LOWER)"/>
    <define name="$(GPSLOGSD_PORT_UPPER)_BAUD" value="$(GPSLOGSD_BAUD)"/>
    <file name="gpslogsd.c"/>
  </makefile>
</module>
