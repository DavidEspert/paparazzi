<!DOCTYPE module SYSTEM "module.dtd">

<module name="cam_roll_l6234" dir="cam_control">
  <doc>
    <description>Camera control l6234 direct drive on roll axis only</description>
    <define name="L6234_ROTATION_DIR" value="TRUE,FALSE"/>
  </doc>
  <settings>
    <dl_settings>
      <dl_settings NAME="CamRollL6234">
        <dl_setting var="Power"        min="0" step="1" max="100" module="cam_control/cam_roll_l6234" shortname="Power"/>
        <dl_setting var="Proportional" min="0" step="1" max="200" module="cam_control/cam_roll_l6234" shortname="PGain"/>
        <dl_setting var="Derivative"   min="1" step="1" max="4"  module="cam_control/cam_roll_l6234" shortname="DGain"/>
        <dl_setting var="RotationDir"  min="0" step="1" max="1" type="bool" values="TRUE|FALSE" module="cam_control/cam_roll_l6234" shortname="Dir"/>
      </dl_settings>
    </dl_settings>
  </settings>

  <header>
    <file name="cam_roll_l6234.h"/>
  </header>
  <init fun="cam_roll_l6234_init()"/>
  <periodic fun="cam_roll_l6234_periodic()" freq="400.0"/>
  <makefile target="ap">
    <file name="cam_roll_l6234.c"/>
  </makefile>
</module>
