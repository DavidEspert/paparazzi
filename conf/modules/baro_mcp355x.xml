<!DOCTYPE module SYSTEM "module.dtd">

<module name="baro_mcp355x" dir="sensors">
  <doc>
    <description>Baro on MCP355X ADC (SPI)</description>
  </doc>

  <header>
    <file name="baro_mcp355x.h"/>
  </header>
  <init fun="baro_mcp355x_init()"/>
  <periodic fun="baro_mcp355x_periodic()" freq="12.5"/>
  <event fun="baro_mcp355x_event()"/>

  <makefile target="ap">
    <file name="baro_mcp355x.c"/>
    <file name="mcp355x.c" dir="peripherals"/>
    <define name="USE_SPI_SLAVE0"/>
    <define name="USE_SPI1"/>
    <define name="SPI_MASTER"/>
  </makefile>

</module>
